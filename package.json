{
  "name": "starter-website-lite",
  "version": "1.8.0",
  "description": "Starting static website template to quickly create development environment of a simple test project.",
  "main": "index.js",
  "scripts": {
    "start": "npx gulp",
    "version": "npx conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && npm run format && git add CHANGELOG.md",
    "push:release": "git --version && git push origin master && git push origin --tags",
    "release:major": "npm version major && npm run push:release",
    "release:minor": "npm version minor && npm run push:release",
    "release:patch": "npm version patch && npm run push:release",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "lint:html": "npx htmlhint **/*.html",
    "lint:css": "npx stylelint \"**/*.css\" \"**/*.html\"",
    "lint:js": "npx eslint --ext .html,.js \"**/*.html\" \"**/*.js\"",
    "eslint-check": "npx eslint --print-config . | npx eslint-config-prettier-check",
    "format": "npx prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:html": "npx prettier --write \"**/*.html\"",
    "format:css": "npx prettier --write \"**/*.css\"",
    "format:js": "npx prettier --write \"**/*.js\"",
    "format:json": "npx prettier --write \"**/*.json\"",
    "format:md": "npx prettier --write \"**/*.md\"",
    "format:file": "npx prettier --write",
    "format-check": "npx prettier --check \"**/*.{html,css,js,json,md}\"",
    "format-check-file": "npx prettier --check",
    "autoprefix": "npx postcss public/**/*.css --use autoprefixer -r --no-map",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserslist": [
    "last 2 version",
    "> 1%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format-check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g \".commitlintrc.js\""
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecmatonix/starter-website-lite.git"
  },
  "keywords": [
    "starter-template",
    "static-website",
    "cdn",
    "browser-sync",
    "normalize-css",
    "polyfill-io",
    "jquery",
    "mocha",
    "chai",
    "progressive-web-app",
    "husky",
    "commitlint",
    "conventional-changelog",
    "htmlhint",
    "stylelint",
    "eslint",
    "prettier"
  ],
  "author": {
    "name": "Anton Lykov",
    "email": "ecmatonix@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecmatonix/starter-website-lite/issues"
  },
  "homepage": "https://github.com/ecmatonix/starter-website-lite#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "autoprefixer": "^9.6.0",
    "browser-sync": "^2.26.7",
    "conventional-changelog-cli": "^2.0.21",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-html": "^5.0.5",
    "gulp": "^4.0.2",
    "htmlhint": "^0.11.0",
    "husky": "^1.3.1",
    "postcss-cli": "^6.1.2",
    "prettier": "1.17.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0"
  }
}
