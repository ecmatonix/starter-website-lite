{
  "name": "starter-website-lite",
  "version": "1.1.1",
  "description": "Starting static website template to quickly create development environment of a simple test project.",
  "main": "index.js",
  "scripts": {
    "start": "npx gulp",
    "version": "npx conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint:html": "npx htmlhint **/*.html",
    "lint:css": "npx stylelint \"**/*.css\" \"**/*.html\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:html && npm run lint:css",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './config/git/commitlint.config.js'"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecmatonix/starter-website-lite.git"
  },
  "keywords": [
    "starter-template",
    "static-website",
    "cdn",
    "browser-sync",
    "normalize-css",
    "polyfill-io",
    "jquery",
    "mocha",
    "chai",
    "progressive-web-app",
    "husky",
    "commitlint",
    "conventional-changelog",
    "htmlhint"
  ],
  "author": {
    "name": "Anton Lykov",
    "email": "ecmatonix@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecmatonix/starter-website-lite/issues"
  },
  "homepage": "https://github.com/ecmatonix/starter-website-lite#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "browser-sync": "^2.26.3",
    "conventional-changelog-cli": "^2.0.12",
    "gulp": "^4.0.0",
    "htmlhint": "^0.11.0",
    "husky": "^1.3.1",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0"
  }
}
